{
  "compilerOptions": {
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": [
      "esnext",
      "dom"
    ],
    "skipLibCheck": true,
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"],
      "@styles/*": ["./styles/*"],
      "@assets/*": ["./assets/*"],
      "@router/*": ["./router/*"],
      "@api/*": ["./api/*"],
      "@components/*": ["./components/*"],
      "@hooks/*": ["./hooks/*"],
      "@views/*": ["./views/*"],
      "@store/*": ["./store/*"],
      "@utils/*": ["./utils/*"],
      "@locale/*": ["./locale/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "src/**/**/*.vue",
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ],
  "types": [
    "element-plus/global"
  ]
}